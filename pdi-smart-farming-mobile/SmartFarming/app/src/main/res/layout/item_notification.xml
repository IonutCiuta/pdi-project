<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="2dp"
    card_view:contentPadding="8dp"
    card_view:cardBackgroundColor="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_plant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:text="Plant name"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_notification_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingBottom="1dp"
            android:paddingTop="1dp"
            android:text="12:51 22.12.2016"
            android:textSize="12sp" />

        <Space
            android:id="@+id/space1"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/text_plant_name" />

        <TextView
            android:id="@+id/text_humidity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/space1"
            android:text="Humidity"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/text_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/space1"
            android:text="2300"
            android:textColor="@color/humidity"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Space
            android:id="@+id/space2"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/text_humidity" />

        <TextView
            android:id="@+id/text_temperature_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/space2"
            android:text="Temperature"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/text_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/space2"
            android:layout_alignParentEnd="true"
            android:text="34"
            android:textColor="@color/temperature"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Space
            android:id="@+id/space3"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/text_temperature" />

        <TextView
            android:id="@+id/text_light_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/space3"
            android:text="Light"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/text_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/space3"
            android:layout_alignParentEnd="true"
            android:text="35888"
            android:textColor="@color/light"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Space
            android:id="@+id/space4"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/text_light" />

        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/space4"
            android:text="Ok"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>